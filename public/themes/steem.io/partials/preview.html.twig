<div class="row tech-toc">
  <div class="col-md-offset-0">
    <div class="col-md-2 center tech-toc-img">
      <img class="tech-toc hidden-xs" src="{{ post.image }}">
    </div>
    <div class="col-md-8 ">
      <h3 class="tech-title">
        <a href="/{{ post.getCategory() }}/@{{ post.author }}/{{ post.permlink }}">
          {{ post.title }}
        </a>
        &mdash;
        {{ "%datetime%" | trans({'%datetime%' : post.ts | date("M d, Y")})}}
      </h3>
      <p></p>
      {{ post.html_preview | raw }}
    </div>
  </div>
</div>
