<div class="content row">
  <div class="col-md-offset-0">
    <div class="col-md-2 center tech-toc-img"></div>
    <div class="col-md-8">
      <h2 class="text-center">
        <a href="/{{ post.getCategory() }}/@{{ post.author }}/{{ post.permlink }}">
          {{ post.title }}
        </a>
      </h2>
      <h4 class="text-center vpc visible full-visible"><b>- {{ "%datetime%" | trans({'%datetime%' : post.ts | date("M d, Y")})}} -</b></h4>
      <h5 class="text-center vpc visible full-visible">
        {% for tag in post.getTags() %}
          {% if tag %}
          <a href="/tagged/{{ tag }}">
            #{{ tag }}
          </a>
          {% if not loop.last %} - {% endif %}
          {% endif %}
        {% endfor %}
      </h5>
  <hr class="steemer">
      {{ post.html | raw }}
    </div>
  </div>
</div>

